@page "/"
@using Microsoft.AspNetCore.SignalR.Client

<h1>Hello, world!</h1>

Welcome to your new app.

@foreach (var message in messages)
{
    <p>@message.Content</p>
}

@code {
    private HubConnection? hubConnection;
    private List<Argon.Zine.Chat.Models.Message> messages = new List<Argon.Zine.Chat.Models.Message>();

    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl("https://localhost:5001/chathub")
            .AddMessagePackProtocol()
            .Build();

        await hubConnection.StartAsync();

        //await hubConnection.SendAsync("createRoom", new { RestaurantId = new Guid("0FE02B5A-D2F0-4078-9635-1A6E99FF40AD") });
        //await hubConnection.SendAsync("sendMessage", new
        //{
        //    RoomId = new Guid("2c427249-e50f-4b63-bcdb-2ec8e6f3f5e4"),
        //    Content = $"Mensagem {Random.Shared.Next(1, int.MaxValue)}"
        //});

        messages = await hubConnection.InvokeAsync<List<Argon.Zine.Chat.Models.Message>>("messages", new
        {
            Limit = 20,
            OffSet = 0,
            RoomId = new Guid("2c427249-e50f-4b63-bcdb-2ec8e6f3f5e4")
        });
    }
}